    <!-- row textView style -->
    <style name="rowTextTitle" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/row_title_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="rowTextNormal" parent="rowTextTitle">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="rowTextSpecial" parent="rowTextTitle">
        <item name="android:textColor">@color/colorRedDark</item>
    </style>

    <!-- cardview layout style -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_content_paddingLR</item>
        <item name="android:paddingRight">@dimen/card_content_paddingLR</item>
        <item name="android:paddingTop">@dimen/card_content_paddingTB</item>
        <item name="android:paddingBottom">@dimen/card_content_paddingTB</item>
    </style>

    <style name="text_info_content">
        <item name="android:textColor">@color/colorBlackLight</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

